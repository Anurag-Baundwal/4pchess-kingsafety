extends layout

block content
  div.wrapper
    div.lhs
      div#board
      div#move_overlay.move-overlay
    div.rhs
      div.settings
        input(placeholder='Max depth')#max_depth
        input(placeholder='Max secs per move')#secs_per_move
      div.evaluation
        div#eval_estimate.eval-estimate
        div#turn_info.turn-info
        div#lives_info.lives-info
      div.move-controls
        div#undo_move.move-button.chevron-left
        div#redo_move.move-button.chevron-right
      div#move_history
      div.pgn
        textarea(placeholder='Enter PGN')#pgn_input.pgn-input
        p#pgn_error.pgn-error
